{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "sourceMap": false,
    "target": "ES2019",
    "lib": [
      "ES2019",
      "DOM"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "module": "CommonJS",
    "esModuleInterop": true,
    "noImplicitAny": true,
    "types": [
      "node",
      "reflect-metadata",
      "jest"
    ],
    "typeRoots": [
      "./node_modules/@types"
    ],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src",
    "./typings/*",
    ".eslintrc.js",
  ]
}
